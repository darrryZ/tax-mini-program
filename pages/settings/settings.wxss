/* pages/settings/settings.wxss */
.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.settings-list {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.settings-section {
  padding: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.settings-section:last-child {
  border-bottom: none;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 28rpx;
  color: #666;
}

.item-value {
  font-size: 28rpx;
  color: #333;
}

.info-box {
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 30rpx;
}

.info-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.info-text:last-child {
  margin-bottom: 0;
}

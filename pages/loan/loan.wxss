/* pages/loan/loan.wxss */
.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.form {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.radio {
  display: inline-block;
  margin-right: 40rpx;
  font-size: 28rpx;
}

.radio text {
  margin-left: 10rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.btn-primary {
  background-color: #07c160;
  color: #fff;
}

.btn-default {
  background-color: #f5f5f5;
  color: #666;
}

.result {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.result-header {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
  padding: 30rpx;
  text-align: center;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.summary {
  padding: 40rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.summary-item:last-child {
  border-bottom: none;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.summary-value.highlight {
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
}

.summary-value.interest {
  color: #f5576c;
}

.schedule-toggle {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  background-color: #f8f8f8;
  border-top: 1rpx solid #f0f0f0;
  cursor: pointer;
}

.toggle-text {
  font-size: 28rpx;
  color: #07c160;
  margin-right: 10rpx;
}

.toggle-icon {
  font-size: 24rpx;
  color: #07c160;
}

.schedule {
  padding: 20rpx;
  background-color: #fff;
}

.schedule-header,
.schedule-row {
  display: flex;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.schedule-header {
  background-color: #f8f8f8;
  font-weight: bold;
  border-radius: 10rpx 10rpx 0 0;
}

.schedule-col {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.schedule-row .schedule-col {
  color: #333;
}

.load-more {
  text-align: center;
  padding: 30rpx;
  color: #07c160;
  font-size: 28rpx;
}

/* pages/calculator/calculator.wxss */
.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.form {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.radio {
  display: inline-block;
  margin-right: 40rpx;
  font-size: 28rpx;
}

.radio text {
  margin-left: 10rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.btn-primary {
  background-color: #07c160;
  color: #fff;
}

.btn-default {
  background-color: #f5f5f5;
  color: #666;
}

.result {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.result-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  text-align: center;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.result-items {
  padding: 40rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item.highlight {
  padding: 30rpx 0;
  background-color: #f8f8f8;
  margin: 10rpx -20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-radius: 10rpx;
  border-bottom: none;
}

.result-label {
  font-size: 28rpx;
  color: #666;
}

.result-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.result-value.primary {
  font-size: 36rpx;
  color: #07c160;
  font-weight: bold;
}

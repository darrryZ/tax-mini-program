/* pages/insurance/insurance.wxss */
.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.form {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #07c160;
  background-color: #fff;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
}

.hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn::after {
  border: none;
}

.btn-primary {
  background-color: #07c160;
  color: #fff;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  background-color: #06ad56;
}

.btn-default {
  background-color: #f5f5f5;
  color: #666;
}

.btn-default:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  background-color: #ececec;
}

.result {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.result-header {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  padding: 30rpx;
  text-align: center;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.summary {
  padding: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.summary-item:last-child {
  margin-bottom: 0;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
}

.summary-value.personal {
  color: #f5576c;
}

.summary-value.company {
  color: #4facfe;
}

.summary-value.total {
  color: #07c160;
}

.detail-section {
  padding: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.detail-section:last-child {
  border-bottom: none;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.detail-items {
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
}

.detail-value {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}
